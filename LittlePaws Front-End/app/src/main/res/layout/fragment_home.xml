<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
tools:context=".Homepage_User"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#F1F1F1">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/gif_image"
        android:layout_width="346dp"
        android:layout_height="209dp"
        android:layout_marginTop="28dp"
        android:scaleType="fitXY"
        android:src="@drawable/little_paws_promotional_video"
        app:layout_constraintDimensionRatio="16:9"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/little_paws_promotional_video" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="404dp"
        android:layout_height="282dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/welcome_page"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/welcome_page" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="218dp"
        android:layout_height="193dp"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.777"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5"
        app:srcCompat="@drawable/logo" />

    <TextView
        android:id="@+id/welcome_copaw"
        android:layout_width="238dp"
        android:layout_height="48dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="316dp"
        android:fontFamily="@font/italiana"
        android:gravity="top"
        android:text="Welcome, Paw!"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome_copaw4"
        android:layout_width="189dp"
        android:layout_height="38dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="248dp"
        android:fontFamily="@font/italiana"
        android:gravity="top"
        android:text="The Little Paws: Find your Pawfect Match"
        android:textColor="#117486"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/welcome_copaw2"
        android:layout_width="333dp"
        android:layout_height="88dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="28dp"
        android:fontFamily="@font/italiana"
        android:gravity="top"
        android:text="connect with us by sending us a message!"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="122dp"
        android:layout_height="168dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/italiana"
        android:text="Welcome to the Little Paws: Find Your Pawfect Match, your go-to destination for dog adoption in the city! At our veterinarian office, we're dedicated to connecting loving "
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_copaw" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="342dp"
        android:layout_height="157dp"
        android:layout_marginStart="28dp"
        android:fontFamily="@font/italiana"
        android:text="families with their furry companions. With our user-friendly interface, you can browse through a wide array of adorable pups waiting to find their forever homes. Whether you're looking for a playful companion for outdoor adventures or a cuddly friend to keep you company, we have the pawfect match for you. Join our community of compassionate pet lovers and embark on the journey of unconditional love and companionship. Let the tail-wagging adventures begin!"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView7" />

    <!-- Name Label -->

    <!-- Name Field -->

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:fontFamily="@font/italiana"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.077"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcome_copaw2" />

    <EditText
        android:id="@+id/editTextName"
        android:layout_width="355dp"
        android:layout_height="49dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/italiana"
        android:hint="Enter your name"
        android:inputType="textPersonName"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewName" />

    <!-- Subject Label -->

    <!-- Subject Field -->

    <TextView
        android:id="@+id/textViewSubject"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/italiana"
        android:text="Subject"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.078"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextName" />

    <EditText
        android:id="@+id/editTextSubject"
        android:layout_width="357dp"
        android:layout_height="47dp"
        android:backgroundTint="#000000"
        android:fontFamily="@font/italiana"
        android:hint="Enter subject"
        android:inputType="text"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewSubject" />

    <!-- Message Label -->

    <!-- Message Box -->

    <TextView
        android:id="@+id/textViewMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/italiana"
        android:text="Message"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.082"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSubject" />

    <EditText
        android:id="@+id/editTextMessage"
        android:layout_width="360dp"
        android:layout_height="136dp"
        android:fontFamily="@font/italiana"
        android:hint="Enter your message"
        android:inputType="textMultiLine"
        android:lines="5"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewMessage" />

    <!-- Submission Button -->
    <Button
        android:id="@+id/buttonSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:backgroundTint="#CA5D5D"
        android:fontFamily="@font/italiana"
        android:text="Submit"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextMessage"
        app:layout_constraintVertical_bias="1.0" />
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>